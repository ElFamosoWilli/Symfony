{% extends 'base.html.twig' %}

{% block title%}  Liste des livres {% endblock %}

{% block body %}
    <div class="container">
        <h2>Il y a {{nombreLivre}} livre(s)</h2>
        <table class="table-striped table-hover table-bordered">
            <thead>
                <th>id</th>
                <th>titre</th>
                <th>autheur</th>
                <th>editeur</th>
                <th>categorie</th>
                <th>resumer</th>
                <th>text</th>
                <th>date (formater par une methode dans le modele)</th>
                <th>date (formater par twig)</th>
            </thead>
            <tbody>
            {% for livre in livres %}
                <tr>
                <td>{{livre.id}}</td>
                <td>{{livre.titre}}</td>
                <td>{{livre.author}}</td>
                <td>{{livre.editor}}</td>
                <td>{{livre.category}}</td>
                <td>{{livre.resume | myExerpt()}}</td>
                <td>{{livre.text | random() }}</td>
                <td>{{livre.dateFormat}}</td>
                <td>{{livre.date | date('d/m/y')}}</td>                
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}